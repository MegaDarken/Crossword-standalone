{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "*.c",
                "*.cpp"
            ],
            "options": {
                // "cwd": "/usr/bin"
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}