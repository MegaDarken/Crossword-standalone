{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "release-unix",
            "displayName": "Release Unix Config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -march=haswell -flto -std=c++11"
            }
        },
        {
            "name": "release-mingw",
            "displayName": "Release Windows Config",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -march=haswell -flto -std=c++11"
            }
        },
        {
            "name": "debug-unix",
            "displayName": "Debug Unix Config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -std=c++11"
            }
        },
        {
            "name": "debug-mingw",
            "displayName": "Debug Windows Config",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -std=c++11"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-build",
            "configurePreset": "release"
        },
        {
            "name": "debug-build",
            "configurePreset": "debug"
        }
    ],
    "testPresets": [
        {
            "name": "release-test",
            "configurePreset": "release"
        }
    ]
}
