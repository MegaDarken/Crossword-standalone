{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "release-unix",
            "displayName": "Release Unix Config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -flto"
            }
        },
        {
            "name": "release-mingw",
            "displayName": "Release Windows Config",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic -flto"
            }
        },
        {
            "name": "debug-unix",
            "displayName": "Debug Unix Config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic"
            }
        },
        {
            "name": "debug-mingw",
            "displayName": "Debug Windows Config",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -Wpedantic"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-unix-build",
            "configurePreset": "release-unix"
        },
        {
            "name": "release-mingw-build",
            "configurePreset": "release-mingw"
        },
        {
            "name": "debug-unix-build",
            "configurePreset": "debug-unix"
        },
        {
            "name": "debug-mingw-build",
            "configurePreset": "debug-mingw"
        }
    ],
    "testPresets": [
        {
            "name": "release-unix-test",
            "configurePreset": "release-unix"
        },
        {
            "name": "release-mingw-test",
            "configurePreset": "release-mingw"
        }
    ]
}
